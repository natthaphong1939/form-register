<div class="container">
    <div class="column">
        <h1>Registered Users</h1>
        <%= button_to 'Register', register_modal_registrations_path, method: :get, class: 'btn btn-success' %>
    </div>

    <% if @registrations.any? %>
        <div class="table-overflow" id="index">
            <table class="table">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birthday</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Subject</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    <% @registrations.each do |registration| %>
                        <tr>
                            <td><%= registration.first_name %></td>
                            <td><%= registration.last_name %></td>
                            <td><%= registration.birthday %></td>
                            <td><%= registration.gender %></td>
                            <td><%= registration.email %></td>
                            <td><%= registration.phone_number %></td>
                            <td><%= registration.subject %></td>
                            <td>
                                <%= link_to 'Delete', registration_path(registration), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger' %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    <% end %>
</div>

<!-- Modal frame -->
<turbo-frame id="modal"></turbo-frame>
