<div class="container">
  <h1>Edit Registration</h1>

  <%= form_with(model: @registration, local: true) do |form| %>
    <div class="form-row">
      <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
          <%= form.label :birthday %>
          <%= form.date_field :birthday, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :gender %>
        <div>
          <%= form.radio_button :gender, 'Male' %>
          <%= form.label :gender_male, 'Male' %>
          <%= form.radio_button :gender, 'Female' %>
          <%= form.label :gender_female, 'Female' %>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :phone_number %>
        <%= form.telephone_field :phone_number, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :subject %>
      <%= form.select :subject, ['Math', 'Science', 'History', 'Art'] %>
    </div>

    <div class="spacing-btn">
        <% @registrations = Registration.all %>
        <%= link_to "Back", registration_url(@registrations), class: 'btn btn-secondary' %>
      <%= form.submit "Edit", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>